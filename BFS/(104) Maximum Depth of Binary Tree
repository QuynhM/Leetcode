def maxDepth(self, root: Optional[TreeNode]) -> int:
    ### BFS
        if not root:
            return 0
        
        depth = 0
        queue = deque([root])

        while queue:
            n = len(queue)
            depth += 1

            for i in range(n):
                node = queue.popleft()
                for child in [node.left, node.right]:
                    if child is not None:
                        queue.append(child)
        return depth
